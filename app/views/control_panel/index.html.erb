<h1>Control Panel</h1>

<h3>Welcome, <%= current_user.name %></h3>

<p>You are using: <%= current_user.try(:authentication).try(:provider) || "Please Re-Authenticate Using Clover or Square" %>.</p>

<% if current_user.authentication %>
  <%= link_to "Destroy Authentication", current_user.authentication, :confirm => 'Are you sure you want to remove this authentication option?', :method => :delete %>
<% else %>
  <%= link_to "Clover Authentication", "/auth/clover" %><br>
  <%= link_to "Square Authentication", "/auth/square" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Items</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @devices %>
  </tbody>
</table>
